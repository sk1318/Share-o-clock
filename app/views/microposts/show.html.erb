<% @microposts.each do |micropost| %>
<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
     <ol class  = "microposts">
         <li>
             <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
             <span class="content">
               <%= micropost.content %>
               <%= image_tag micropost.display_image if micropost.image.attached? %>
              </span>
         </li>
     </ol>
    </div>
</div>
<% end %>