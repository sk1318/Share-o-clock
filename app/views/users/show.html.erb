<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <%= gravatar_for @user %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6 offset-3 ">
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render "microposts/micropost" %>
      </ol>
    <% end %>
  </div>
</div>